<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Lista de Periodos</h1>
    </div>
    <%= link_to new_period_path(@period), :class => 'btn btn-success' do %>

      <font color="White">    Nuevo Periodo </font>
    <% end %>
    <p id="notice"><%= notice %></p>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
  <thead>
    <tr>
      <th colspan="10">Año</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.year %></td>
        <td><%= link_to 'Mostrar', period, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Editar', edit_period_path(period), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Eliminar', period, method: :delete, data: { confirm: '¿Seguro desea Eliminar?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
