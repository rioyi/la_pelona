<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Lista de Enfermedades Especificas</h1>
    </div>
    <%= link_to new_sickness_specific_path(@sickness_specific), :class => 'btn btn-success' do %>

      <font color="White">    Nueva Enfermedad Especifica </font>
    <% end %>
    <p id="notice"><%= notice %></p>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">

  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cod</th>
      <th>Enfermedad General</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sickness_specifics.each do |sickness_specific| %>
      <tr>
        <td><%= sickness_specific.name %></td>
        <td><%= sickness_specific.cod %></td>
        <td><%= sickness_specific.sickness_general.name %></td>
        <td><%= link_to 'Mostrar', sickness_specific, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Editar', edit_sickness_specific_path(sickness_specific), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Eliminar', sickness_specific, method: :delete, data: { confirm: 'Â¿Seguro desea Eliminar?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
